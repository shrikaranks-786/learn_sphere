<div class="mx-auto w-full flex flex-col lg:flex-row pb-6">
  <div class="mx-auto w-full">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <% if @post.lessons.any? && @post.lessons.first.video.present?%>
      <%= video_tag @post.lessons.first.video, controls: true , class: "w-full rounded mb-6"%>
    <% end %>

    <div class="border p-6 rounded">
      <div class="flex justify-start items-center flex-wrap w-full mb-2">
        <% @post.categories.each do |category|%>
          <div class="bg-amaranth-100 text-amaranth-800 text-sm font-semibold mt-2 mr-2 px-2.5 py-0.5 roundedgit">
            <%= category.name%>
          </div>
        <% end %>
      </div>
      <span> <%=@post.lessons.count%> <%= "content".pluralize(@post.lessons.count)%></span>
      <h1 class="text-2xl font-bold"> <%=@post.title%></h1>
      <p class="text-gray-500 mt-2"><%=@post.description%></p>
    </div>

    <div>
      <%= render "sidebar"%>
    </div>
  </div>
</div>
