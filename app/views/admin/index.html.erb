        <p class="text-amaranth-50 text-base">
          <%= @quick_stats[:sales] %>
        </p>
      </div>
    </div>
    <div class="max-w-sm rounded overflow-hidden w-full md:w-48 shadow-xl bg-gradient-to-r from-amaranth-400 to-amaranth-300">
      <div class="px-6 py-4">
        <h2 class="font-bold text-xl mb-2 text-amaranth-50">Lessons Done</h2>
        <p class="text-amaranth-50 text-base">
          <%= @quick_stats[:completed_lessons] %>
        </p>
      </div>
    </div>
    <div class="max-w-sm rounded overflow-hidden w-full md:w-48 shadow-xl bg-gradient-to-r from-amaranth-400 to-amaranth-300">
      <div class="px-6 py-4">
        <h2 class="font-bold text-xl mb-2 text-amaranth-50">Total Sign Ups</h2>
        <p class="text-amaranth-50 text-base">
